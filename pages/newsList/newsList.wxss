.news_item{
  padding:20rpx 24rpx 20rpx 280rpx;
  border-bottom:1px solid #eeeeee;
  box-sizing: border-box;
  height: 200rpx;
  background:#fff;
  font-size:28rpx;
  position: relative;
}
.thumb{
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}
.time{
  position: absolute;
  bottom:33rpx;
  font-size: 24rpx;
  color:#999;
}
.author{
  color:#3399cc;
}