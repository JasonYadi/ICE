.userMessage{
  padding:42rpx 30rpx 0;
  font-size: 28rpx;
  color:#333;
  text-align: right;
}
.input_group{
  padding:28rpx 30rpx;
  margin-bottom:30rpx;
  background:#fff;
  position: relative;
}

.input_group .label{
  position: absolute;
  left:26rpx;
  top:50%;
  transform: translateY(-50%);
}
.input_group.verify_code{
  width:380rpx;
}
.input_group .getCode{
  width:230rpx;
  position: absolute;
  bottom:0;
  top:0;
  right: -250rpx;
  background: #fff;
  color:#1296db;
}
.input_group .getCode::after{
  content: attr(data-codeStr);
  position: absolute;
  top:50%;
  right:0;left:0;
  text-align: center;
  transform: translateY(-50%)
}
.button{
  margin-top:72rpx;
}
.button button{
  background: #1296db;
  color: #fff;
}
.button button::after{
  border: 0;
}