.coupons{
  padding:0 20rpx;
  margin:35rpx 0;
}

.items{
  padding:0 20rpx;
  background:#fff;
}
.item{
  padding:31rpx 0;
  font-size:28rpx;
  color:#010101;
  text-align: right;
  position: relative;
}
.item::after{
  content: attr(data-item);
  position: absolute;
  left:0;
}
.branch{
  border-bottom:1px solid #e5e5e5;
}

.instructions{
  padding:0 20rpx 50rpx;
  margin:30rpx 0;
  background:#fff;
  font-size:28rpx;
  color:#010101;
}
.instructions .title,
.coupon_code .title{
  border-bottom:1px solid #e5e5e5;
  padding:25rpx 0;
  margin-bottom:27rpx;
  position: relative;
}
.instructions .content{
  font-size:26rpx;
  color:#999;
  line-height: 50rpx;
}
.coupon_code{
  padding:0 20rpx 27rpx;
  background: #ffffff;
  font-size:30rpx;
}
.coupon_code .title::after{
  content:attr(data-use-status);
  position: absolute;
  right: 0;
  font-size:26rpx;
  color:#31a8e5;
}
.coupon_code.isUsed .title{
  border-bottom:0;
  margin-bottom:0;
  padding-bottom:0;
}
.coupon_code.isUsed .title::after{
  color:#999999;
}